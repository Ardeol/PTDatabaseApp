<?xml version="1.0" encoding="utf-8" ?>
<vbox id="edit-labs-container" width="100%" height="100%">
    <hbox width="100%" height="100%">
        <vbox id="edit-labs-form" width="50%" height="100%">
            <grid width="100%" columns="2">
                <text text="Class" />
                <text id="edit-labs-class" />
                <text text="Lab Times" />
                <text id="edit-labs-labs" />
            </grid>
            <vbox width="100%" height="100%">
                <text id="edit-labs-current-pts" />
                <namesortselector id="edit-labs-sortby" width="100%" />
                <smartlistview id="edit-labs-pt-list" width="100%" height="100%" />
            </vbox>
        </vbox>
        <vbox width="50%" height="100%">
            <smartlistview id="edit-labs-lab-list" width="100%" height="100%" />
            <hbox width="100%">
                <button id="edit-labs-import-btn" width="50%" text="Import Lab File" />
                <button id="edit-labs-clear-btn" width="50%" text="Clear Labs" />
            </hbox>
        </vbox>
    </hbox>
</vbox>