<?xml version="1.0" encoding="utf-8" ?>
<vbox id="edit-pts-container" width="100%" height="100%">
    <hbox width="100%" height="100%">
        <vbox id="edit-pts-pt-form" width="50%" height="100%">
            <grid width="100%" columns="2">
                <text text="First Name" />
                <text id="edit-pts-firstname" />
                <text text="Last Name" />
                <text id="edit-pts-lastname" />
                <text text="Preferred Name" />
                <smarttextinput width="100%" id="edit-pts-preferredname" />
                <text text="Email" />
                <smarttextinput width="100%" id="edit-pts-email" />
                <text text="Image" />
                <smarttextinput width="100%" id="edit-pts-image" />
            </grid>
            <tabview width="100%" height="100%">
                <vbox text="Labs" width="100%" height="100%">
                    <text id="edit-pts-current-labs" />
                    <smartlistview id="edit-pts-lab-list" width="100%" height="100%" />
                </vbox>
                <vbox text="Office Hours" width="100%" height="100%">
                    <smartlistview id="edit-pts-office-hour-list" width="100%" height="100%" />
                    <hbox width="100%">
                        <smarttextinput id="edit-pts-add-office-hours-days" width="10%" />
                        <smarttextinput id="edit-pts-add-office-hours-start" width="15%" />
                        <ampmselector id="edit-pts-add-office-hours-start-ampm" width="15%" />
                        <text text="-" width="5%" />
                        <smarttextinput id="edit-pts-add-office-hours-end" width="15%" />
                        <ampmselector id="edit-pts-add-office-hours-end-ampm" width="15%" />
                        
                    <!--<smarttextinput id="edit-pts-add-office-hours" width="75%" />-->
                        <button id="edit-pts-add-office-hours-btn" width="25%" text="Add Hours" />
                    </hbox>
                </vbox>
                <vbox text="View Schedule" width="100%" height="100%">
                    <smartlistview id="edit-pts-schedule" width="100%" height="100%" />
                    <hbox width="100%">
                        <button id="edit-pts-upload-schedule" width="50%" text="Upload New Schedule" />
                        <button id="edit-pts-clear-schedule" width="50%" text="Clear Schedule" />
                    </hbox>
                </vbox>
            </tabview>
        </vbox>
        <vbox width="50%" height="100%">
            <namesortselector id="edit-pts-sortby" width="100%" />
            <smartlistview id="edit-pts-pt-list" width="100%" height="100%" />
            <hbox width="100%">
                <button id="edit-pts-add-pt-btn" width="33%" text="Add Peer Teacher" />
                <button id="edit-pts-import-bulk-btn" width="34%" text="Import Bulk PTs" />
                <button id="edit-pts-clear-btn" width="33%" text="Clear All" />
            </hbox>
        </vbox>
    </hbox>
</vbox>