<?xml version="1.0" encoding="utf-8" ?>
<vbox id="master-container" width="100%" height="100%">
    <style>
        #content-container {  padding: 6px; }
        TextTableComponent TextTableHeadComponent {
            backgroundColor: 0x606C88;
            padding: 2px;
        }
        TextTableComponent TextTableHeadComponent Text {  color: 0xFFFFFF; }
        TextTableComponent TextTableCellComponent {
            backgroundColor: 0xFFFFFF;
        }
        TextTableComponent TextTableCellComponent.alternate {
            backgroundColor: 0xE9EDF5;
        }
        .rem-pt-btn, .rem-lab-btn, .rem-btn {
            backgroundColor: 0x845E5E;
            backgroundColorGradientEnd: 0x683D3D;
            borderColor: 0x664949;
        }
        .rem-pt-btn:over, .rem-lab-btn:over, .rem-btn:over {
            backgroundColor: 0x684A4A;
            backgroundColorGradientEnd: 0x492B2B;
            borderColor: 0x4C3737;
        }
        .rem-pt-btn:down, .rem-lab-btn:down, .rem-btn:down {
            backgroundColor: 0xA58989;
            backgroundColorGradientEnd: 0x937676;
            borderColor: 0x4C3737;
        }
    </style>
    
    <menubar id="top-bar">
        <menubutton text="File" id="file-menubutton">
            <import resource="ui/menues/file.xml" />
        </menubutton>
        <menubutton text="Edit" id="edit-menubutton">
            <import resource="ui/menues/edit.xml" />
        </menubutton>
        <menubutton text="List" id="list-menubutton">
            <import resource="ui/menues/list.xml" />
        </menubutton>
        <menubutton text="Generate" id="generate-menubutton">
            <import resource="ui/menues/generate.xml" />
        </menubutton>
        <menubutton text="Help" id="help-menubutton">
            <import resource="ui/menues/help.xml" />
        </menubutton>
        <spacer width="100%" />
        <text id="database-title" text="" />
    </menubar>
    
    <vbox id="content-container" width="100%" height="100%">
        
    </vbox>
</vbox>